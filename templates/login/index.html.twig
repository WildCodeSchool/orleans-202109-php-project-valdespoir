{% extends 'adminBase.html.twig' %}

{% block stylesheets %}
{{ encore_entry_link_tags('login') }}
{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<main class="container">
		<div class="row connexion text-center mb-5 mt-5">
			<h1 class="text-dark">Connexion à l'administration de Val Espoir</h1>
		</div>
		<div class="row">
			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
		</div>
		<div class="card mb-5 col-lg-6 offset-lg-3 rounded-2">
			<div class="card-text p-3 mb-3 rounded-top d-flex justify-content-center align-content-center">
				<p class="text-dark mt-2 mb-0">Identification</p>
			</div>
			<form action="{{ path('login') }}" method="post" class="d-flex flex-column mb-5 container">
				<div class="mb-4 text-dark d-flex justify-content-center fs-5">
					<label for="username" class="me-2">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-person-fill" viewbox="0 0 16 16">
							<path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
						</svg>
					</label>
					<input type="email" id="username" name="_username" value="{{ last_username }}" placeholder="Email"/>
				</div>
				<div class="mb-5 text-dark d-flex justify-content-center fs-5">
					<label for="password" class="me-2">
						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-lock-fill" viewbox="0 0 16 16">
							<path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
						</svg>
					</label>
					<input
					type="password" id="password" name="_password" placeholder="Mot de passe"/>

				{# If you want to control the URL the user is redirected to on success
										<input type="hidden" name="_target_path" value="/account"/> #}
				</div>
				<div class="d-flex justify-content-center">
					<button class="btn btn-outline-dark col-lg-4 fs-5" type="submit">Se connecter</button>
				</div>
				<a class="mt-5 text-decoration-none text-center" href="{{ path('app_forgot_password_request') }}">Mot de passe oublié ?</a>

			</form>
		</div>
	</main>
{% endblock %}
