{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('admin') }}
	{{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
	<main class="container">
		{% for flash_error in app.flashes('reset_password_error') %}
			<div class="alert alert-danger" role="alert">{{ flash_error }}</div>
		{% endfor %}
		<h1 class="text-dark text-center mt-5 mb-5">Réinitialisation du mot de passe</h1>
		<div class="text-dark fs-5">
			{{ form_start(requestForm) }}
			{{ form_row(requestForm.email) }}
			<div>
				<small class="text-dark fs-5">
					Entrez votre adresse e-mail et nous vous enverrons un
										lien pour réinitialiser votre mot de passe.
				</small>
			</div>
			<div class="d-flex justify-content-center">
				<button class="btn btn-outline-dark mt-5 fs-5">Envoyer un e-mail de réinitialisation du mot de passe</button>
			</div>
			{{ form_end(requestForm) }}
		</div>
	</main>
{% endblock %}
