{% extends 'adminBase.html.twig' %}

{% block title %}Partenaire index
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block body %}
	<main class="container mb-5">
		<h1 class="text-center text-dark mt-5 mb-3">Nos partenaires</h1>
		<div>
			<a class="btn btn-outline-primary px-2 rounded mb-3 fs-5" href="{{ path('admin_partner_new') }}">Ajouter</a>
		</div>
		<div class="row">
			<div class="table-responsive">
				<table class="table align-middle text-dark table-bordered border table-borderless table-hover">
					<thead class="table-dark text-light">
						<tr class="text-center fs-4">
							<th class="col-2">Nom</th>
							<th class="col-3">Logo</th>
							<th class="col-5">Lien du site partenaire</th>
							<th class="col-2">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for partner in partners %}
							<tr class="table-light text-dark fs-5">
								<td>{{ partner.name }}</td>
								<td><img class="w-50" src="/uploads/images/{{ partner.picture }}" alt="logo de {{ partner.name }}"></td>
								<td>{{ partner.link }}</td>
								<td class="d-flex justify-content-center align-items-center">
									<a class="btn btn-outline-dark px-2 rounded fs-5 m-2" href="{{ path('admin_partner_edit', {'id': partner.id}) }}">Éditer</a>
									<div class="ms-2">
										{{ include('admin_partner/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">Aucun enregistrement trouvé</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</main>
{% endblock %}
