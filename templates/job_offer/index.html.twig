{% extends 'base.html.twig' %}

{% block title %}Offres d'emplois - Val Espoir
{% endblock %}

{% block banner %}
{% include 'job_offer/_banner.html.twig' %}
{% endblock %}

{% block body %}
	<main class="container mb-4 mt-5">
		{% for job_offer in jobOffers %}
			<div class="card card-actuality mb-5 mt-5 bg-light opacity-75">
				<div class="row g-0">
					<div class="col-md-4">
						<img class="card-img job-img img-fluid rounded-start opacity-100" src="{{ asset('build/images/placeholder-job.jpg') }}" alt="actuality-image">
					</div>
					<div class="col-md-8">
						<div class="card-body job-body text-dark d-flex m-2">
							<div class="align-self-center">
								<h3 class="card-title mb-4">{{ job_offer.title }}</h3>
								<p class="card-date mb-4">
									<small class="text-muted">Date de publication de l'offre :
										{{ job_offer.date|date('d/m/Y') }}
									</small>
								</p>
								<a class="btn btn-primary text-light" href="{{ path('job_offer_show', {id: job_offer.id}) }}" type="button">DÃ©tails</a>
					</div>
				</div>
			</div>
		</div>
	</div>
	{% endfor %}
</main>
{% endblock %}