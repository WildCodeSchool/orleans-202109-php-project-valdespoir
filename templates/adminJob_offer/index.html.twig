{% extends 'adminBase.html.twig' %}

{% block title %}JobOffer index
{% endblock %}

{% block body %}
	<main class="container-fluid">
		<h1 class="text-center text-dark mt-5 mb-5">Liste des offres d'emplois</h1>
		<div>
			<a class="btn btn-outline-primary px-2 rounded mb-3 fs-5" href="{{ path('adminJob_offer_new') }}">Ajouter</a>
		</div>
		<div class="row">
			<div class="table-responsive">
				<table class="table align-middle text-dark table-bordered border table-borderless table-hover">
					<thead class="table-dark text-light">
						<tr class="text-center fs-4">
							<th class="col-2">Date</th>
							<th class="col-8">Titre</th>
							<th class="col-2">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for job_offer in job_offers %}
							<tr>
								<td>{{ job_offer.date ? job_offer.date|date('Y-m-d H:i:s') : '' }}</td>
								<td>{{ job_offer.title }}</td>
								<td class="d-flex justify-content-center align-items-center">
									<a class="btn btn-outline-dark px-2 rounded fs-5 m-2" href="{{ path('adminJob_offer_edit', {'id': job_offer.id}) }}">Ã‰diter</a>
									<div class="ms-2">
										{{ include('adminJob_offer/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</main>

{% endblock %}
