{% extends 'base.html.twig' %}

{% block title %}Chantier index
{% endblock %}

{% block stylesheets %}{{ encore_entry_link_tags('admin') }}{% endblock %}

{% block body %}
	<main class="container mb-5">
		<h1 class="text-center text-dark mt-5 mb-2">Les chantiers</h1>
		<div>
		<a class="btn btn-outline-primary px-2 rounded mb-3 fs-5" href="{{ path('admin_site_new') }}">Ajouter</a>
		</div>
		<div class="row">
			<div class="table-responsive">
				<table class="table align-middle text-dark table-bordered border table-borderless table-hover">
					<thead class="table-dark text-light">
						<tr class="text-center fs-4">
							<th class="col-5">Titre</th>
							<th class="col-5">Ville</th>
							<th class="col-2">Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for site in sites %}
							<tr class="table-light text-dark fs-5">
								<td>{{ site.title }}</td>
								<td>{{ site.city }}</td>
								<td class="d-flex justify-content-center">
									<a class="btn btn-outline-dark px-2 rounded fs-5 me-2 ms-2 mt-2 mb-2" href="{{ path('admin_site_edit', {'id': site.id}) }}">Ã‰diter</a>
									<div class="ms-2">
									{{ include('adminSite/_delete_form.html.twig') }}
									</div>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</main>
{% endblock %}
