<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<link rel="icon" type="image/png" href="{{ asset('build/images/favicon.png') }}"/>
		<title>
			{% block title %}Projet 3 Name
			{% endblock %}
		</title>
		{{ encore_entry_link_tags('app') }}
		{% block stylesheets %}{% endblock %}
		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body>
		{% block navbar %}
			{% include "include/_navbar.html.twig" %}
		{% endblock %}
		{% block banner %}{% endblock %}
		{% block flash %}
			{% for category, messages in app.flashes %}
				{% for message in messages %}
					<div class="row">
						<div class="alert offset-2 col-8 d-flex mt-5 justify-content-center alert-{{ category }}">
							{{ message }}
						</div>
					</div>
				{% endfor %}
			{% endfor %}
		{% endblock %}
		{% block body %}{% endblock %}
		<footer>
			{% block footer %}
				{% include "include/_footer.html.twig" %}
			{% endblock %}
		</footer>
	</body>
</html>
