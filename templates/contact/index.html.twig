{% extends 'base.html.twig' %}

{% block title %}Contact - Val Espoir
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block banner %}
	{% include 'contact/_contact_banner.html.twig' %}
{% endblock %}

{% block body %}
	<main class="container container-form ps-0 pe-0 bg-light opacity-75">
		{{ form_start(form) }}
		<div class="row">
			<div class="offset-1 col-10 fs-5 mt-5 text-dark bg-secondary rounded-2">
				{{ form_widget(form) }}
			</div>
		</div>
		<div class="button mt-5 d-flex justify-content-center">
			<button class="btn btn-primary text-light px-3 px-5 fs-5 rounded" type="submit">Envoyer</button>
		</div>
		{{ form_end(form) }}
	</main>
{% endblock %}
