{% extends 'base.html.twig' %}

{% block title %}Contact
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block banner %}
	{% include 'contact/_contact_banner.html.twig' %}
{% endblock %}

{% block body %}
	<main class="container container-form ps-0 pe-0">
		{{ form_start(form) }}
		<div class="row">
			<div class="offset-1 col-10 fs-5 mt-5 text-dark">
				{{ form_widget(form) }}
			</div>
		</div>
		<div class="button mt-5 d-flex justify-content-center">
			<button class="btn btn-primary text-light px-3 opacity-75 rounded px-5 fs-5" type="submit">Envoyer</button>
		</div>
		{{ form_end(form) }}
	</main>
{% endblock %}
