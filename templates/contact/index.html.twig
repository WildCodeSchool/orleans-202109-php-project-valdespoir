{% extends 'base.html.twig' %}

{% block title %}Contact - Val Espoir
{% endblock %}

{% block stylesheets %}
	{{ encore_entry_link_tags('contact') }}
{% endblock %}

{% block banner %}
	{% include 'contact/_contact_banner.html.twig' %}
{% endblock %}

{% block body %}
	<main class="container container-form bg-secondary opacity-75">
		{{ form_start(form) }}
		<div class="row d-flex justify-content-center">
			<div class="col-md-6 col-lg-10 fs-5 mt-5 text-dark rounded-2">
				{{ form_widget(form) }}
			</div>
			<div class="button pt-4 d-flex justify-content-center">
				<button class="btn btn-primary text-light px-5 fs-5 rounded" type="submit">Envoyer</button>
			</div>
		</div>
		{{ form_end(form) }}
	</main>
{% endblock %}
